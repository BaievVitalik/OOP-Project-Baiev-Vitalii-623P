<Page x:Class="OOP_KP_Baiev.Views.AccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AccountPage"
      Background="Transparent">

    <Grid>

        <Border Width="600"
                Background="White"
                CornerRadius="12"
                Padding="20"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.2" Color="Black"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Button Content="На головну"
                            Click="GoToMain_Click"
                            Background="#4CAF50"
                            Foreground="White"
                            Padding="8,5"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Width="120"
                            HorizontalAlignment="Left">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                        CornerRadius="8"
                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="Вийти з акаунта"
                            Click="Logout_Click"
                            Background="#F44336"
                            Foreground="White"
                            Padding="8,5"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Width="120"
                            HorizontalAlignment="Right"
                            Grid.Column="1">    
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                        CornerRadius="8"
                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <DockPanel Grid.Row="1" LastChildFill="True" Margin="0,10,0,0">
                    <Image x:Name="AvatarImage"
                           Width="125" Height="125"
                           Margin="0,0,30,0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Stretch="Uniform"
                           ClipToBounds="True"
                           SnapsToDevicePixels="True"
                           DockPanel.Dock="Left"/>
                    <StackPanel>
                        <TextBlock Text="Мій профіль"
                                   FontSize="26"
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"
                                   Foreground="#1F2937"
                                   HorizontalAlignment="Left"/>

                        <TextBlock x:Name="FullNameText" FontSize="18" FontWeight="SemiBold" Foreground="#111827" Margin="0,5"/>
                        <TextBlock x:Name="UsernameText" FontSize="14" Foreground="#4B5563" Margin="0,2"/>
                        <TextBlock x:Name="RoleText" FontSize="14" Foreground="#4B5563" Margin="0,2"/>
                        <TextBlock x:Name="BirthDateText" FontSize="14" Foreground="#4B5563" Margin="0,2"/>
                        <TextBlock x:Name="LocationText" FontSize="14" Foreground="#4B5563" Margin="0,2"/>

                        <ScrollViewer Height="100"
                                      VerticalScrollBarVisibility="Auto"
                                      Margin="0,10,0,20">
                            <TextBlock x:Name="DescriptionText"
                                       TextWrapping="Wrap"
                                       FontSize="14"
                                       Foreground="#374151"/>
                        </ScrollViewer>

                        <Button Content="Редагувати профіль"
                                Click="EditProfile_Click"
                                Background="#2196F3"
                                Foreground="White"
                                Padding="10"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Cursor="Hand"
                                Width="160">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
