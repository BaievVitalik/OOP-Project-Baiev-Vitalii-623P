<Page x:Class="OOP_KP_Baiev.Views.MyProjectsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:conv="clr-namespace:OOP_KP_Baiev.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Мої проєкти"
      Background="#F0F2F5">

    <Page.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FilterButtonStyle" BasedOn="{StaticResource NavButtonStyle}" TargetType="Button">
            <Setter Property="MinWidth" Value="130"/>
        </Style>

        <Style TargetType="ListViewItem" x:Key="ProjectItemStyle">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8" SnapsToDevicePixels="True">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,20">
            <Button Content="На головну" Click="GoToMain_Click" 
                    Style="{StaticResource NavButtonStyle}" Background="#6c757d"
                    HorizontalAlignment="Left" Margin="0,0,0,15"/>
            <TextBlock Text="Мої проєкти" FontSize="28" FontWeight="Bold" Foreground="#2E3A59" HorizontalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button Content="Активні" Click="Active_Click" Style="{StaticResource FilterButtonStyle}" Background="#28a745"/>
            <Button Content="Завершені" Click="Completed_Click" Style="{StaticResource FilterButtonStyle}" Background="#dc3545"/>
        </StackPanel>

        <ListView Grid.Row="2" x:Name="ProjectList" BorderThickness="0" Background="Transparent" ItemContainerStyle="{StaticResource ProjectItemStyle}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="White" 
                            CornerRadius="8"
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1" 
                            Padding="20" 
                            Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <TextBlock Text="{Binding Title}" FontSize="20" FontWeight="SemiBold" Foreground="#333" Margin="0,0,0,8"/>
                                <TextBlock Text="Опис:" FontWeight="Medium" Foreground="#555" Margin="0,0,0,3"/>
                                <ScrollViewer MaxHeight="80" VerticalScrollBarVisibility="Auto" Margin="0,0,0,8">
                                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" FontSize="14" Foreground="#666" LineHeight="20"/>
                                </ScrollViewer>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top">
                                <TextBlock Text="Статус:" FontWeight="Medium" FontSize="13" Foreground="#555" HorizontalAlignment="Right"/>
                                <TextBlock Text="{Binding Status}" FontStyle="Italic" Foreground="{Binding Status, Converter={StaticResource StatusToColorConverter}}" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Right" Margin="0,0,0,10"/>
                                <TextBlock Text="Вартість:" FontWeight="Medium" FontSize="13" Foreground="#555" HorizontalAlignment="Right"/>
                                <TextBlock Text="{Binding Price, StringFormat={}{0:C}, ConverterCulture=uk-UA}" FontSize="18" FontWeight="Bold" Foreground="#007ACC" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock x:Name="EmptyProjectsPlaceholder" Text="У вас поки що немає проектів з таким статусом."
                   Grid.Row="2" FontSize="16" Foreground="Gray"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Visibility="Collapsed"/>

    </Grid>
</Page>