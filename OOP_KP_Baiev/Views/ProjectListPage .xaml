<Page x:Class="OOP_KP_Baiev.Views.ProjectListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ProjectListPage"
      Background="#F9FAFB">

    <Grid>

        <ScrollViewer>
            <StackPanel Margin="40">

                <Button Content="Назад до головної"
                        Click="GoToMain_Click"
                        Background="#3B82F6"
                        Foreground="White"
                        Padding="10,6"
                        FontWeight="SemiBold"
                        Width="200"
                        HorizontalAlignment="Left"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,0,20">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <TextBlock Text="Список усіх проєктів"
                           FontSize="28"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Foreground="#1F2937"
                           Margin="0,0,0,30"/>

                <ItemsControl x:Name="ProjectList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White"
        CornerRadius="12"
        Padding="16"
        Margin="0,0,0,20"
        BorderBrush="#E5E7EB"
        BorderThickness="1">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10"
                          ShadowDepth="2"
                          Opacity="0.15"
                          Color="Black"/>
                                </Border.Effect>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="Bold" Foreground="#111827"/>
                                        <TextBlock Text="{Binding Description}" FontSize="14" TextWrapping="Wrap" MaxWidth="500" Foreground="#374151" Margin="0,8,0,0"/>
                                        <TextBlock Text="{Binding Status}" FontStyle="Italic" FontSize="13" Foreground="#6B7280" Margin="0,4,0,0"/>
                                        <TextBlock Text="{Binding OwnerLogin}" FontSize="12" Foreground="#9CA3AF" Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="1"
                   Text="{Binding Price, StringFormat='₴ {0:F2}'}"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="#10B981"
                   VerticalAlignment="Center"
                   Margin="20,0,0,0"/>
                                </Grid>
                            </Border>

                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>

        <Button x:Name="CreateButton"
                Width="60" Height="60"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,25,10"
                Background="#10B981"
                Foreground="White"
                FontSize="32"
                Click="CreateProject_Click"
                Cursor="Hand"
                ToolTip="Створити новий проєкт"
                BorderThickness="0">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="30">
                        <TextBlock Text="+" 
                                   FontSize="42"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" Height="68"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

    </Grid>
</Page>
