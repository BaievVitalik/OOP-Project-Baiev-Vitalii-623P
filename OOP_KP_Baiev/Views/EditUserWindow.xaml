<Window x:Class="OOP_KP_Baiev.Views.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редагування користувача" Height="600" Width="700"
        WindowStartupLocation="CenterScreen" Background="Transparent" ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>

        <Style TargetType="TextBox" x:Key="InputBoxStyle">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="DatePicker" x:Key="InputDatePickerStyle">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button" x:Key="ActionButtonStyle">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinWidth" Value="150"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="Transparent">
        <Grid Background="Transparent">
            <Border Background="White" CornerRadius="12" Padding="30" Margin="20">
                <StackPanel>

                    <TextBlock Text="Редагування користувача"
                               FontSize="26" FontWeight="Bold"
                               Margin="0,0,0,25"
                               HorizontalAlignment="Center"
                               Foreground="#1F2937"/>

                    <StackPanel>
                        <TextBlock Text="Логін:" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="LoginBox" Style="{StaticResource InputBoxStyle}"/>

                        <TextBlock Text="Email:" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="EmailBox" Style="{StaticResource InputBoxStyle}"/>
                    </StackPanel>

                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Ім'я:" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="FirstNameBox" Style="{StaticResource InputBoxStyle}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Прізвище:" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="LastNameBox" Style="{StaticResource InputBoxStyle}" />
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Країна:" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="CountryBox" Style="{StaticResource InputBoxStyle}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Місто:" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="CityBox" Style="{StaticResource InputBoxStyle}" />
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Дата народження:" Style="{StaticResource LabelStyle}"/>
                    <DatePicker x:Name="BirthDatePicker" Style="{StaticResource InputDatePickerStyle}"/>

                    <TextBlock Text="Опис (про себе):" Style="{StaticResource LabelStyle}"/>
                    <Border Height="100" Margin="0,0,0,15" Background="White" BorderBrush="#ccc" BorderThickness="1" CornerRadius="4">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="-1,0,5,-4">
                            <TextBox x:Name="DescriptionBox"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Disabled"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     FontSize="14"
                                     Padding="10"
                                     MinHeight="100"/>
                        </ScrollViewer>
                    </Border>

                    <!-- Аватар -->
                    <TextBlock Text="Аватар:" Style="{StaticResource LabelStyle}" Margin="0,10,0,5"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,20">
                        <Border BorderBrush="#ccc" BorderThickness="1" CornerRadius="5" Width="100" Height="100" Margin="0,0,15,0">
                            <Image x:Name="AvatarImage" Stretch="UniformToFill"/>
                        </Border>
                        <StackPanel>
                            <Button Content="Завантажити аватар"
                                    Click="UploadAvatar_Click"
                                    Style="{StaticResource ActionButtonStyle}"
                                    Background="#2196F3" />
                            <Button Content="Видалити аватар"
                                    Click="RemoveAvatar_Click"
                                    Style="{StaticResource ActionButtonStyle}"
                                    Background="#E53935" />
                        </StackPanel>
                    </StackPanel>

                    <Button Content="Зберегти зміни"
                            Click="Save_Click"
                            Style="{StaticResource ActionButtonStyle}" Background="#4CAF50"
                            HorizontalAlignment="Stretch" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>
