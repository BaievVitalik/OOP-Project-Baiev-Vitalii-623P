<Page x:Class="OOP_KP_Baiev.Views.CreateProjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Створення проєкту"
      Background="Transparent">
    <Page.Resources>
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="#FF3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,15,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="MinWidth" Value="150"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF2563EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox" x:Key="InputBox">
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>

    </Page.Resources>

    <Grid>
        <Border VerticalAlignment="Center" HorizontalAlignment="Center" 
                Background="White" Padding="35" CornerRadius="10" 
                Width="480" MaxWidth="600">
            <Border.Effect>
                <DropShadowEffect Color="Gray" ShadowDepth="2" BlurRadius="10" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel>
                <Button Content="На головну" Click="GoToMain_Click"
                        HorizontalAlignment="Left"
                        Style="{StaticResource PrimaryButton}"
                        Background="#FF6B7280" Foreground="White" 
                        Width="Auto" MinWidth="120" Height="20" Padding="10,6" Margin="0,0,0,20"/>

                <TextBlock Text="🎯 Створити новий проєкт"
                           FontSize="24" FontWeight="Bold" Margin="0,0,0,25"
                           Foreground="#FF1F2937"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Назва проєкту:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="TitleBox" Style="{StaticResource InputBox}" Tag="Назва проєкту"/>
                <TextBlock Text="Опис проєкту:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="DescriptionBox"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         MinHeight="100" MaxHeight="200" Style="{StaticResource InputBox}" Tag="Детальний опис вашого проєкту"
                         VerticalScrollBarVisibility="Auto"/>

                <TextBlock Text="Вартість (грн):" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="PriceBox" Style="{StaticResource InputBox}" Tag="300"/>

                <Button Content="Створити проєкт" Click="Create_Click"
                        Style="{StaticResource PrimaryButton}" Height="25" />
            </StackPanel>
        </Border>
    </Grid>
</Page>