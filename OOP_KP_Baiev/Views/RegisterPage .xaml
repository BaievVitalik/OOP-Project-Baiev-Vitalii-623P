<Page x:Class="OOP_KP_Baiev.Views.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="RegisterPage"
      Background="Transparent">
    <Page.Resources>
        <Style x:Key="AuthButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,8,0,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="TextBox" x:Key="AuthInputBoxStyle">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#FFD1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="PasswordBox" x:Key="AuthPasswordBoxStyle">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#FFD1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="RadioButton" x:Key="AuthRadioButtonStyle">
            <Setter Property="Foreground" Value="#FF1F2937"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,4,10,4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Border Width="400" MaxWidth="450"
                Background="White"
                CornerRadius="12"
                Padding="40" VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="1" Opacity="0.2" Color="Gray"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Реєстрація"
                           FontSize="26" FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25" Foreground="#FF1F2937"/>

                <TextBlock Text="Логін" Foreground="#FF4B5563" Margin="0,0,0,2"/>
                <TextBox x:Name="UsernameBox" Style="{StaticResource AuthInputBoxStyle}"/>

                <TextBlock Text="Email" Foreground="#FF4B5563" Margin="0,0,0,2"/>
                <TextBox x:Name="EmailBox" Style="{StaticResource AuthInputBoxStyle}"/>

                <TextBlock Text="Пароль" Foreground="#FF4B5563" Margin="0,10,0,2"/>
                <PasswordBox x:Name="PasswordBox" Style="{StaticResource AuthPasswordBoxStyle}"/>

                <TextBlock Text="Підтвердження пароля" Foreground="#FF4B5563" Margin="0,10,0,2"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Style="{StaticResource AuthPasswordBoxStyle}"/>

                <TextBlock Text="Роль" Foreground="#FF4B5563" Margin="0,10,0,4"/>
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="CustomerRadio"
                                 Content="Замовник"
                                 IsChecked="True"
                                 GroupName="Role"
                                 Style="{StaticResource AuthRadioButtonStyle}"/>
                    <RadioButton x:Name="FreelancerRadio"
                                 Content="Фрилансер"
                                 GroupName="Role"
                                 Style="{StaticResource AuthRadioButtonStyle}"/>
                </StackPanel>

                <Button Content="Зареєструватися"
                        Click="Register_Click"
                        Background="#FF2196F3"
                        Style="{StaticResource AuthButtonStyle}" Margin="0,15,0,5"/>

                <Button Content="Повернутися до входу"
                        Click="GoToLogin_Click"
                        Background="#FF4CAF50"
                        Style="{StaticResource AuthButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
