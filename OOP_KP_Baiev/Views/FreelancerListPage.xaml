<Page x:Class="OOP_KP_Baiev.Views.FreelancerListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="FreelancerListPage"
      Background="#F9FAFB">

    <Grid>

        <ScrollViewer>
            <StackPanel Margin="40">
                <Button Content="На головну"
                        Click="GoToMain_Click"
                        Background="#3B82F6"
                        Foreground="White"
                        Padding="10,6"
                        FontWeight="SemiBold"
                        Width="120"
                        HorizontalAlignment="Left"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,0,20">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <TextBlock Text="Список фрілансерів"
                           FontSize="28"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           Foreground="#1F2937"
                           Margin="0,0,0,30"/>

                <ItemsControl x:Name="FreelancerList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White"
                                    CornerRadius="12"
                                    Padding="16"
                                    Margin="0,0,0,20"
                                    BorderBrush="#E5E7EB"
                                    BorderThickness="1">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10"
                                                      ShadowDepth="2"
                                                      Opacity="0.15"
                                                      Color="Black"/>
                                </Border.Effect>

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Image Source="{Binding AvatarPath}"
                                           Width="80"
                                           Height="80"
                                           Margin="0,0,20,0"
                                           Stretch="UniformToFill"
                                           ClipToBounds="True"
                                           SnapsToDevicePixels="True"/>

                                    <StackPanel>
                                        <TextBlock Text="{Binding FirstName}" FontSize="18" FontWeight="Bold" Foreground="#111827"/>
                                        <TextBlock Text="{Binding LastName}" FontSize="16" Foreground="#374151"/>
                                        <TextBlock Text="{Binding Country}" FontSize="14" Foreground="#6B7280"/>
                                        <TextBlock Text="{Binding City}" FontSize="14" Foreground="#6B7280"/>
                                        <TextBlock Text="{Binding Description}" FontSize="13" Foreground="#4B5563" TextWrapping="Wrap" MaxWidth="400" Margin="0,6,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
