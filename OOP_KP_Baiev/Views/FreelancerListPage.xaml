<Page x:Class="OOP_KP_Baiev.Views.FreelancerListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="FreelancerListPage"
      Background="#F9FAFB">

    <Grid>

        <ScrollViewer>
            <StackPanel Margin="40">
                <Button Content="Назад"
                        Click="GoToMain_Click"
                        Background="#3B82F6"
                        Foreground="White"
                        Padding="10,6"
                        FontWeight="SemiBold"
                        Width="120"
                        HorizontalAlignment="Left"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,0,20">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <TextBlock Text="Список фрілансерів"
                           FontSize="28"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           Foreground="#1F2937"
                           Margin="0,0,0,30"/>

                <ItemsControl x:Name="FreelancerList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White"
                                    CornerRadius="12"
                                    Padding="20"
                                    Margin="0,0,0,16"
                                    BorderBrush="#E5E7EB"
                                    BorderThickness="1"
                                    HorizontalAlignment="Stretch">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10"
                              ShadowDepth="2"
                              Opacity="0.15"
                              Color="Black"/>
                                </Border.Effect>

                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding AvatarPath}"
                                           Width="70"
                                           Height="70"
                                           Margin="0,0,20,0"
                                           Stretch="UniformToFill"
                                           ClipToBounds="True"
                                           SnapsToDevicePixels="True"/>

                                    <StackPanel>
                                        <TextBlock Cursor="Hand"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Foreground="#111827"
                                                   Margin="0,0,0,4"
                                                   Tag="{Binding}"
                                                   MouseLeftButtonUp="FreelancerName_Click">            
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextDecorations" Value="{x:Null}" />
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="TextDecorations" Value="Underline" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                                <Run Text="{Binding FirstName}" />
                                                <Run Text=" " />
                                                <Run Text="{Binding LastName}" />       
                                        </TextBlock>


                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="{Binding Country}" FontSize="14" Foreground="#6B7280" Margin="0,0,6,0"/>
                                            <TextBlock Text="{Binding City}" FontSize="14" Foreground="#6B7280"/>
                                        </StackPanel>

                                        <TextBlock Text="Опис:" FontWeight="Medium" Foreground="#555" Margin="0,8,0,3"/>
                                        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="80">
                                            <ScrollViewer.Resources>
                                                <Style TargetType="ScrollBar">
                                                    <Setter Property="Opacity" Value="0"/>
                                                    <Setter Property="Width" Value="0"/>
                                                </Style>
                                            </ScrollViewer.Resources>
                                            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Foreground="#374151"/>
                                        </ScrollViewer>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
