<Page x:Class="OOP_KP_Baiev.Views.EditProjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:models="clr-namespace:OOP_KP_Baiev.Models"
      Background="Transparent">

    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>

        <Style TargetType="TextBox" x:Key="InputBoxStyle">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button" x:Key="ActionButtonStyle">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinWidth" Value="150"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Background="Transparent" Margin="0,0,0,2">
        <Border Background="White" CornerRadius="12" Padding="30" Margin="50">
            <StackPanel>

                <TextBlock Text="Редагування проєкту"
                           FontSize="26" FontWeight="Bold"
                           Margin="0,0,0,25"
                           HorizontalAlignment="Center"
                           Foreground="#1F2937"/>

                <TextBlock Text="Назва:" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="TitleBox" Style="{StaticResource InputBoxStyle}" />

                <TextBlock Text="Опис:" Style="{StaticResource LabelStyle}"/>
                <Border Height="100" Margin="0,0,0,15" Background="White" BorderBrush="#ccc" BorderThickness="1" CornerRadius="4">
                    <TextBox x:Name="DescriptionBox"
             AcceptsReturn="True"
             TextWrapping="Wrap"
             VerticalScrollBarVisibility="Auto"
             BorderThickness="0"
             Background="Transparent"
             FontSize="14"
             Padding="10"
             Height="98"/>
                </Border>


                <TextBlock Text="Ціна (грн):" Style="{StaticResource LabelStyle}" />
                <TextBox x:Name="PriceBox" Style="{StaticResource InputBoxStyle}" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Зберегти"
                            Click="Save_Click"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#4CAF50" Width="125"/>
                    <Button Content="Скасувати"
                            Click="Cancel_Click"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#E53935"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Page>
