<Page x:Class="OOP_KP_Baiev.Views.ProjectProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ProjectProfilePage"
      Background="Transparent">
    <Grid>
        <Border Width="900"
                Background="White"
                CornerRadius="12"
                Padding="20"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                MaxHeight="800" Height="553">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.2" Color="Black"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="Назад"
                            Click="GoToMain_Click"
                            Background="#4CAF50"
                            Foreground="White"
                            Padding="8,5"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Width="120"
                            HorizontalAlignment="Left">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="DeleteButton"
                            Content="Видалити"
                            Click="DeleteProject_Click"
                            Background="#DC2626"
                            Foreground="White"
                            Padding="8,5"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Width="120"
                            HorizontalAlignment="Right"
                            Visibility="Collapsed"
                            Grid.Column="1">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="RespondButton"
                            Content="Відгукнутися"
                            Click="RespondToProject_Click"
                            Background="#1D4ED8"
                            Foreground="White"
                            Padding="8,5"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Width="140"
                            HorizontalAlignment="Right"
                            Visibility="Collapsed"
                            Margin="10,0,130,0"
                            Grid.Column="1">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button x:Name="MarkAsDoneButton"
                            Content="Позначити як виконане"
                            Click="MarkAsDone_Click"
                            Background="#F59E0B"
                            Foreground="White"
                            Padding="8,5"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Width="180"
                            HorizontalAlignment="Right"
                            Visibility="Collapsed"
                            Margin="10,0,0,0"
                            Grid.Column="1">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <StackPanel x:Name="PendingButtonsPanel"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Grid.Column="1"
                                Visibility="Collapsed"
                                Margin="10,0,0,0">
                        <Button Content="Прийняти"
                                Click="AcceptWork_Click"
                                Background="#10B981"
                                Foreground="White"
                                Padding="8,5"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Cursor="Hand"
                                Width="120"
                                Margin="0,0,10,0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button Content="Продовжити"
                                Click="ContinueWork_Click"
                                Background="#3B82F6"
                                Foreground="White"
                                Padding="8,5"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Cursor="Hand"
                                Width="120">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,10,0,0">
                        <TextBlock Text="Деталі проєкту" FontSize="26" FontWeight="Bold" Margin="0,0,0,20" Foreground="#1F2937" HorizontalAlignment="Left"/>

                        <TextBlock Text="Назва проєкту:" FontWeight="Bold" FontSize="14" Foreground="#374151"/>
                        <TextBlock x:Name="TitleText" FontSize="16" Foreground="#111827" Margin="0,2,0,10"/>

                        <TextBlock Text="Замовник (логін):" FontWeight="Bold" FontSize="14" Foreground="#374151"/>
                        <TextBlock x:Name="OwnerLoginText"
                                   FontSize="14"
                                   Foreground="#1D4ED8"
                                   Margin="0,2,0,10"
                                   Cursor="Hand"
                                   TextDecorations="{x:Null}"
                                   MouseLeftButtonUp="OwnerLoginText_MouseLeftButtonUp"
                                   MouseEnter="OwnerLoginText_MouseEnter"
                                   MouseLeave="OwnerLoginText_MouseLeave"/>

                        <TextBlock Text="Ціна:" FontWeight="Bold" FontSize="14" Foreground="#374151"/>
                        <TextBlock x:Name="PriceText" FontSize="14" Foreground="#4B5563" Margin="0,2,0,10"/>

                        <TextBlock Text="Статус:" FontWeight="Bold" FontSize="14" Foreground="#374151"/>
                        <TextBlock x:Name="StatusText" FontSize="14" Foreground="#4B5563" Margin="0,2,0,10"/>

                        <Grid Margin="0,10,0,0" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Опис:" FontWeight="Bold" FontSize="14" Foreground="#374151" VerticalAlignment="Center" Grid.Column="0"/>
                            <Button Content="Редагувати"
                                    Click="EditProject_Click"
                                    x:Name="EditButton"
                                    Background="#3B82F6"
                                    Foreground="White"
                                    Padding="4,2"
                                    FontWeight="SemiBold"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Width="100"
                                    Height="24"
                                    VerticalAlignment="Center"
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,10,0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                        <ScrollViewer Height="183" VerticalScrollBarVisibility="Auto" Margin="0,2,0,0">
                            <ScrollViewer Height="179"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled"
                                          Margin="0,2,0,0"
                                          CanContentScroll="True"
                                          PanningMode="VerticalOnly">
                                <ScrollViewer.Resources>
                                    <Style TargetType="ScrollBar">
                                        <Setter Property="Opacity" Value="0" />
                                        <Setter Property="Width" Value="0" />
                                    </Style>
                                </ScrollViewer.Resources>
                                <TextBlock x:Name="DescriptionText"
                                           TextWrapping="Wrap"
                                           FontSize="14"
                                           Foreground="#374151"
                                           VerticalAlignment="Top"/>
                            </ScrollViewer>
                        </ScrollViewer>
                        <StackPanel x:Name="ProjectDetailsPanel"
                                    Margin="0,20,0,0"
                                    Visibility="Collapsed">
                            <TextBlock Text="Охочі фрилансери:"
                                       x:Name="FreelancerListLabel"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#1F2937"
                                       Margin="0,0,0,10"/>

                            <ItemsControl x:Name="FreelancerCardsPanel">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White"
                                                CornerRadius="12"
                                                Padding="20"
                                                Margin="0,0,0,16"
                                                BorderBrush="#E5E7EB"
                                                BorderThickness="1"
                                                HorizontalAlignment="Stretch">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="10"
                                                                  ShadowDepth="2"
                                                                  Opacity="0.15"
                                                                  Color="Black"/>
                                            </Border.Effect>

                                            <Grid>
                                                <StackPanel Orientation="Horizontal"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Top"
                                                            Margin="0,0,0,0"
                                                            Panel.ZIndex="1">
                                                    <Button Content="Прийняти"
                                                            Tag="{Binding}"
                                                            Click="AssignFreelancer_Click"
                                                            Cursor="Hand"
                                                            Background="Transparent"
                                                            Foreground="#10B981"
                                                            BorderThickness="0"
                                                            FontWeight="SemiBold"
                                                            Margin="0,0,8,0"
                                                            Padding="6,2">
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <Setter Property="Background" Value="Transparent"/>
                                                                <Setter Property="Foreground" Value="#10B981"/>
                                                                <Setter Property="Cursor" Value="Hand"/>
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="Button">
                                                                            <Border Background="{TemplateBinding Background}"
                                                                                    CornerRadius="8"
                                                                                    Padding="{TemplateBinding Padding}">
                                                                                <ContentPresenter HorizontalAlignment="Center"
                                                                                                  VerticalAlignment="Center"/>
                                                                            </Border>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#D1FAE5"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>

                                                    <Button Content="Відхилити"
                                                            Tag="{Binding}"
                                                            Click="RejectFreelancer_Click"
                                                            Cursor="Hand"
                                                            Background="Transparent"
                                                            Foreground="#EF4444"
                                                            BorderThickness="0"
                                                            FontWeight="SemiBold"
                                                            Padding="6,2">
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <Setter Property="Background" Value="Transparent"/>
                                                                <Setter Property="Foreground" Value="#EF4444"/>
                                                                <Setter Property="Cursor" Value="Hand"/>
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="Button">
                                                                            <Border Background="{TemplateBinding Background}"
                                                                                    CornerRadius="8"
                                                                                    Padding="{TemplateBinding Padding}">
                                                                                <ContentPresenter HorizontalAlignment="Center"
                                                                                                  VerticalAlignment="Center"/>
                                                                            </Border>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#FEE2E2"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                </StackPanel>

                                                <StackPanel Margin="0,20,0,0">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image Source="{Binding AvatarPath}"
                                                               Width="80"
                                                               Height="70"
                                                               Margin="0,0,20,0"
                                                               Stretch="UniformToFill"
                                                               ClipToBounds="True"
                                                               SnapsToDevicePixels="True"/>

                                                        <StackPanel>
                                                            <TextBlock Cursor="Hand"
                                                                       FontSize="18"
                                                                       FontWeight="Bold"
                                                                       Foreground="#111827"
                                                                       Margin="0,0,0,4"
                                                                       Tag="{Binding}"  
                                                                       MouseLeftButtonUp="FreelancerName_Click">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="TextDecorations" Value="{x:Null}" />
                                                                        <Style.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="TextDecorations" Value="Underline" />
                                                                            </Trigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                                <Run Text="{Binding FirstName}" />
                                                                <Run Text=" " />
                                                                <Run Text="{Binding LastName}" />
                                                            </TextBlock>
                                                            <ScrollViewer Height="60"
                                                                          VerticalScrollBarVisibility="Hidden"
                                                                          HorizontalScrollBarVisibility="Disabled"
                                                                          Margin="0,4,0,0"
                                                                          CanContentScroll="True"
                                                                          PanningMode="VerticalOnly">
                                                                <TextBlock FontWeight="SemiBold"
                                                                           Foreground="#4B5563"
                                                                           FontSize="14"
                                                                           TextWrapping="Wrap"
                                                                           Text="{Binding Description}"/>
                                                            </ScrollViewer>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>